<!doctype html>
<html>
<head>
    <title>I am Everywhere</title>
    <meta charset="UTF-8">
    <meta name="google-signin-client_id" content="581538059466-j22nqs88b2oivt4m4e729vma42iqhcs0.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="/map.js"></script>
    <script src="/locUpdate.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
    <div class="jumbotron text-center">
        <h1>I am Everywhere</h1>
        <%if(user.clearbit.name){ %>
                <p>Welcome <%=user.clearbit.name.givenName%> <%=user.clearbit.name.familyName%> </p>
        <% } %>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="container"> 
        <div class="row">
            <div class="text-center">
                <form class="form-inline text-center">
                    <div class="form-group">
                    <label for="search">Message:</label>
                    <input type="text" class="form-control" id="message" placeholder="Hello"  />
                    </div>
                    <button type="button" id="submit" class="btn btn-default">Insert</button>
                </form>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="text-center">
                <div id="map" style="width:100%;height:400px;"> </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="text-center">
                <h3>History</h3>
            </div>
        </div>
        <br>
        <div class="row">
            <table class="table table-striped">
                <tr>
                    <th>Message</th>
                    <th>Lat & Lng</th>
                    <th>Date</th>
                </tr>
                <%for(var i=0; i<user.history.length; i++) {%>
                    <tr>
                        <td><%= user.history[i].message %></td>
                        <td><%= user.history[i].lat %> , <%= user.history[i].long%></td>
                        <td><%= user.history[i].date %></td>
                    </tr>
                <% } %>
            </table>
        </div>


    </div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC04xkeFfoWZuOchNosPJkrIWfjryp_rA&libraries=places,geometry&callback=initMap" async defer></script> 
</div>
</body>
</html>
